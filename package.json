{
  "name": "ezpp!",
  "version": "1.5.3",
  "description": "Browser extension for calculating pp!",
  "main": "src/js/index.js",
  "dependencies": {
    "autoprefixer": "^6.3.6",
    "babel-core": "^6.26.3",
    "babel-eslint": "^6.1.2",
    "babel-loader": "^7.1.1",
    "babel-preset-env": "^1.7.0",
    "copy-webpack-plugin": "^3.0.1",
    "cross-env": "^5.1.5",
    "css-loader": "^0.28.5",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.5.1",
    "extract-text-webpack-plugin": "^3.0.0",
    "html-webpack-plugin": "^2.30.1",
    "node-sass": "^4.9.0",
    "ojsama": "^1.0.17",
    "sass-loader": "^6.0.6",
    "showdown": "^1.7.2",
    "style-loader": "^0.18.2",
    "url-loader": "^1.0.1",
    "webpack": "^3.12.0"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=development webpack --config webpack.development.config.js -w",
    "start:chrome": "cross-env BUILD_CHROME=1 npm start",
    "start:firefox": "cross-env BUILD_FF=1 NODE_ENV=development npm start",
    "build": "cross-env NODE_ENV=production webpack --config webpack.production.config.js",
    "build:chrome": "rm -rf build/ ezpp.zip ezpp.xpi && cross-env BUILD_CHROME=1 npm run build && zip -jr ezpp.zip build/* && rm -rf build/",
    "build:firefox": "rm -rf build/ ezpp.zip ezpp.xpi && cross-env BUILD_FF=1 npm run build && zip -jr ezpp.xpi build/* && rm -rf build/",
    "lint": "eslint .",
    "lint:fix": "eslint --fix ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oamaok/ezpp.git"
  },
  "author": "Teemu Pääkkönen <oamaok@gmail.com>",
  "license": "SEE LICENSE IN ./LICENSE",
  "bugs": {
    "url": "https://github.com/oamaok/ezpp/issues"
  },
  "homepage": "https://github.com/oamaok/ezpp#readme"
}
